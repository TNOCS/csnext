{
    "compilerOptions": {
        "module": "es2015",        
        "target": "es5",
        "noImplicitAny": false,
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "sourceRoot": "./src",
        "lib": [
            "es5",
            "dom",
            "es2015",
            "es2015.promise"
        ],
        "moduleResolution": "node",
        "experimentalDecorators": true,        
        "declaration": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true
    }
}