{
    "compilerOptions": {
      "module": "esnext",
      "target": "es2015",      
      "noImplicitAny": false,
      "importHelpers": true,
      "composite": true,      
      "strict": true,
      "sourceMap": true,
      "lib": ["es5", "dom", "es2015", "es2015.promise", "es2016.array.include"],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "removeComments": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,      
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": false,
      "allowJs": false,
      "outDir": "./dist/"      
    },    
    "rules": {
      "quotemark": [true, "single"]
    }
  }