{
    "compilerOptions": {
      "module": "es2015",
      "target": "es2015",
      "noImplicitAny": false,      
      "strict": true,
      "sourceMap": false,
      "lib": ["es5", "dom", "es2015", "es2015.promise", "es2016.array.include"],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": false
    },    
    "rules": {
      "quotemark": [true, "single"]
    }
  }