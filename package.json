{
  "private": true,
  "name": "csnext",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tnocs/csnext.git"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --hoist && lerna run link",
    "dev": "lerna run --parallel dev",
    "clean": "lerna run --parallel clean",
    "build": "lerna run build",
    "unlink": "lerna run unlink",
    "build:parallel": "lerna run --parallel build",
    "dev:docs": "lerna run dev:docs",
    "build:docs": "lerna run build --scope cs-docs",
    "build:docker": "docker build -t tnocs/csnext .",
    "publish:npm": "lerna publish --force-publish=*",
    "publish:beta": "yarn build && lerna publish --force-publish=* --canary --cd-version patch",
    "watch": "tsc -b -w packages",
    "rebuild": "yarn clean && yarn && yarn build"
  },  
  "devDependencies": {
    "lerna": "^3.14.1",
    "del-cli": "^1.1.0",
    "thread-loader": "^2.1.2",
    "cache-loader": "^3.0.1",
    "typedoc": "^0.14.2",
    "typedoc-plugin-monorepo": "^0.1.0",
    "typedoc-plugin-external-module-name": "^2.1.0"
  }
}
