{
    "private": true,
    "name": "csnext",
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tnocs/csnext.git"
    },
    "config": {
        "unsafe-perm": true
    },
    "scripts": {
        "postinstall": "lerna bootstrap && yarn run link",
        "dev": "lerna run --parallel dev",
        "clean": "lerna run clean & del-cli  node_modules yarn.lock yarn-error.log package-lock.json",
        "link": "lerna run link",
        "build": "lerna run build",
        "unlink": "lerna run unlink",
        "build:parallel": "lerna run --parallel build",
        "dev:docs": "lerna run dev:docs",
        "build:docs": "lerna run build:docs",
        "build:typedoc": "npx typedoc ./packages",
        "build:docs-all": "yarn build:typedoc && yarn build:docs",
        "build:docker": "docker build -t tnocs/csnext .",
        "publish:npm": "lerna publish --force-publish=*",
        "publish:beta": "npm build && lerna publish --force-publish=* --canary --cd-version patch",
        "watch": "tsc -b -w packages",
        "rebuild": "yarn run clean && yarn install && yarn run build",
        "test": "lerna run test",
        "lerna:version": "lerna version --conventional-graduate --preid patch",
        "lerna:publish": "lerna publish --npm-client yarn --dist-tag patch"
    },
    "devDependencies": {
        "@types/node": "^12.12.7",
        "@types/yargs": "^13.0.3",
        "cache-loader": "^4.1.0",
        "core-js": "^3.4.0",
        "css-loader": "^3.2.0",
        "deepmerge": "4.2.2",
        "del-cli": "^3.0.0",
        "fibers": "^4.0.2",
        "lerna": "^3.18.4",
        "postcss-loader": "^3.0.0",
        "purify-css": "^1.2.5",
        "raw-loader": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "sass": "1.23.3",
        "sass-loader": "^8.0.0",
        "style-loader": "^1.0.0",
        "thread-loader": "^2.1.3",
        "ts-loader": "^6.2.1",
        "typedoc": "^0.15.0",
        "typedoc-plugin-markdown": "^2.2.11",
        "typescript": "3.7.2",
        "vue": "^2.6.10",
        "vue-class-component": "^7.1.0",
        "vue-property-decorator": "^8.3.0",
        "vue-style-loader": "^4.1.2",
        "webpack": "^4.41.2",
        "webpack-bundle-analyzer": "^3.6.0",
        "webpack-cli": "^3.3.10",
        "yargs": "^14.2.0",
        "yarn": "^1.19.1"
    },
    "dependencies": {
        "markdown-it-link-attributes": "^3.0.0"
    },
    "version": "0.0.120"
}
