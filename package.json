{
  "private": true,
  "name": "csnext",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tnocs/csnext.git"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --hoist && lerna run link",
    "dev": "lerna run --parallel dev",
    "clean": "lerna run --parallel clean",
    "build": "lerna run build",
    "docs:dev": "lerna run docs:dev",
    "docs:build": "lerna run build --scope cs-docs",
    "docker:build": "docker build -t tnocs/csnext .",
    "publish": "yarn build && lerna publish --force-publish=*",
    "publish:beta": "yarn build && lerna publish --force-publish=* --canary --cd-version patch"
  },
  "devDependencies": {
    "del-cli": "^1.1.0",
    "lerna": "^2.11.0"
  },
  "dependencies": {
    "nodemon": "^1.17.3"
  }
}