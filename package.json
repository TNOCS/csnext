{
    "private": true,
    "name": "csnext",
    "license": "MIT",
    "workspaces": ["packages/*"],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tnocs/csnext.git"
    },
    "config": {
        "unsafe-perm": true
    },
    "scripts": {
        "postinstall2": "lerna bootstrap --hoist && yarn run link",
        "dev": "lerna run --parallel dev",
        "clean": "lerna run clean && del-cli pnpm-lock.yaml node_modules yarn.lock yarn-error.log package-lock.json",
        "link": "lerna run link",
        "build": "lerna run build",
        "unlink": "lerna run unlink",
        "build:parallel": "lerna run --parallel build",
        "dev:docs": "lerna run dev:docs",
        "build:docs": "lerna run build --scope cs-docs",
        "build:docker": "docker build -t tnocs/csnext .",
        "publish:npm": "lerna publish --force-publish=*",
        "publish:beta": "npm build && lerna publish --force-publish=* --canary --cd-version patch",
        "watch": "tsc -b -w packages",
        "rebuild": "yarn run clean && yarn install && yarn run build"
    },
    "devDependencies": {
        "core-js": "^2.6.7",
        "css-loader": "^2.1.1",
        "del-cli": "^1.1.0",
        "reflect-metadata": "^0.1.13",
        "vue": "^2.6.10",
        "vue-class-component": "^7.1.0",
        "vue-property-decorator": "^8.1.1",
        "vue-style-loader": "^4.1.2",
        "webpack": "^4.32.2",
        "webpack-bundle-analyzer": "^3.3.2",
        "yargs": "^13.2.4",
        "yarn": "^1.16.0"
    },
    "dependencies": {}
}
